{
    "compilerOptions": {
      /* Language */
      "target": "es2022",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,

      /* Interop Constraints */
      "esModuleInterop": true
    },
    
    /* Directories */
    "include": [
      "src/**/*.ts",
      "test/**/*.ts", 
      "deploy-commands.ts"    ],
    "exclude": [
      "node_modules"
    ],
  }